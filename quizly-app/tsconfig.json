{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": false,
    "noImplicitAny": false,     // Allows implicit 'any' types
    "skipLibCheck": true,       // Skips type checking of declaration files
    "noEmit": true ,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
 
                 // Prevents emitting output (useful if you only want type checking)
  
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
, "app/(auth)/Verification.js", "app/(tabs)/add.js", "app/(tabs)/add.js", "app/(tabs)/index.js"  ]
}